<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyta.zflikz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".controller.MovieController"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ConverseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".ImageSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".ImagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".MovieSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".FullCreditsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".PersonActivity"></activity>
    </application>

</manifest>