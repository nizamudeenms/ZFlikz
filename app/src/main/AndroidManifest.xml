<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyta.zflikz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">


        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter android:label="@string/zlikx_deep_link">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MainActivityTheme">

            <intent-filter android:label="@string/zlikx_deep_link">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="www.nizamudeen.com"
                    android:pathPrefix="/zlikx"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix-->
                <!-- Accepts URIs that begin with "example://gizmos” -->
                <data
                    android:host="www.nizamudeen.com"
                    android:scheme="https" />

            </intent-filter>

        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ConverseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".ImageSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".ImagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".MovieSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".FullCreditsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".PersonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />
        <activity
            android:name=".FullscreenImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectionTheme" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1865534838493345~1681246593" />
    </application>

</manifest>