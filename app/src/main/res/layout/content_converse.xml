<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/complete_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackColorAccent40Percent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/con_profile_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/con_profile_text_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                tools:text="Name" />

            <TextView
                android:id="@+id/con_profile_text_view_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="10dp"
                android:textColor="@color/color_white"
                tools:text="Date" />


            <ImageView
                android:id="@+id/con_post_image_view_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/connection_bg_image"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/con_post_text_view_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white"
                tools:text="Message" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/post_share_icon_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="@color/color_white" />

                <ImageView
                    android:id="@+id/post_target_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:tint="@color/color_white" />

                <ImageView
                    android:id="@+id/post_reply_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:src="@android:drawable/ic_menu_upload"
                    android:tint="@color/color_white" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>